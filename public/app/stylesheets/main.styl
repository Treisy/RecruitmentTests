@import 'normalize.styl'
@import 'fonts.styl'
@import 'fonts-sizes.styl'

/*Colors*/
$yellow = #FCD45E
$footer-background = #0F3D4A
$fucsia = #C03C99
$button-normal = #FCC136
$button-active = #E0BB31
$grid-light = #C0E6ED
$grid-dark = #4DB6CA
$input-background = #106080
$input-color = #9ABEC9
$white = #FFFFFF

body
  font-size 12px
  font-family Arial
  height 100%
  width 100%

footer
  background $footer-background
  color $yellow
  font-size 8px
  position fixed
  bottom 0
  margin 1em 0 0 0
  height 7em
  line-height 7
  vertical-align middle
  left 0
  right 0

  .borders
    border-right 1px solid #ffff00
    border-left 1px solid #ffff00
    padding 0 1em

header
  overflow hidden
  h1
    margin-top 1.2em
    font-size 3.5em

  .border-top
    border-top 5px solid $yellow

  .options-header
    border 1px solid $yellow
    border-radius 0 0 15px 15px
    padding 1em 1em 0.5em 1em
    background  $yellow

    &:nth-child(odd)
      margin-right 2em

.button-normal
  background $button-normal
  border-color $button-active
  padding 6px 10px
  &:hover
    background $button-active
  &:focus
    background $button-active
    border 5px solid $button-active
    box-shadow 0 0 0 transparent
    border-style none

.button-active
  background  $button-active

.cursor-pointer
  cursor pointer

.icon-play-container
  background #C03C99
  border-radius 5px
  width 35px
  height 35px
  padding 8px
  /*margin-left 0.2em*/

  .icon-play
    width 0
    height 0
    border-top 10px solid transparent
    border-left 20px solid $white
    border-bottom 10px solid transparent

.margin-zero
  margin 0

.search-container
  margin 0 auto 1.5em auto

  input
    border-radius 30px
    padding 0.3em 0.8em
    width 96%
    background $input-background
    color $input-color

  .icon-search
    position absolute
    right 4.8em
    top 0.5em
    color $yellow

.table-borders
  padding 0.8em
  &:nth-child(even)
    border-top 2px solid $grid-dark
    border-bottom 2px solid $grid-dark
    background $grid-dark
  &:nth-child(odd)
    background $grid-light


.table-container
  overflow-y auto
  overflow-x hidden
  position absolute
  width 96%
  height 50%

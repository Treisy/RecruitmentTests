@import 'normalize.styl'
@import 'fonts.styl'
@import 'fonts-sizes.styl'

/*Colors*/
$yellow = #FCD45E
$footer-background = #0F3D4A
$fucsia = #C03C99
$button-normal = #FCC136
$button-active = #E0BB31
$grid-light = #C0E6ED
$grid-dark = #4DB6CA
$input-background = #106080
$input-color = #9ABEC9
$white = #FFFFFF

body
  font-size 16px
  font-family Arial

footer
  background $footer-background
  color $yellow
  font-size 8px
  position fixed
  bottom 0
  margin 0
  height 7em
  line-height 7
  vertical-align middle
  left 0
  right 0

  .borders
    border-right 1px solid #ffff00
    border-left 1px solid #ffff00

header
  h1
    margin-top 2em

  .border-top
    border-top 5px solid $yellow

  .options-header
    border 1px solid $yellow
    border-radius 0 0 15px 15px
    padding 1em 1em 0.5em 1em
    background  $yellow

    &:nth-child(odd)
      margin-right 2em

table
  height 80%

  td
    vertical-align middle !important

  .icon-play-container
    background #C03C99
    width 35px
    height 35px
    padding 8px
    margin-left 1em

    .icon-play
      width 0
      height 0
      border-top 10px solid transparent
      border-left 20px solid $white
      border-bottom 10px solid transparent

.button-normal
  background $button-normal
  border-color $button-active
  &:hover
    background $button-active

.button-active
  background  $button-active

.margin-zero
  margin 0

.search-container
  margin 0 auto 3em auto

  input
    border-radius 30px
    padding 0.3em 0.8em
    width 100%
    background $input-background
    color $input-color

  .icon-search
    position absolute
    right 2em
    top 0.5em
    color $yellow